{
  "name": "Hoshino IT (Codespaces)",
  "dockerComposeFile": ["./docker-compose.codespaces.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "22" },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [3000, 3001, 4000, 5432, 6379, 7233, 8080],
  "postCreateCommand": "corepack enable && corepack prepare pnpm@9 --activate && echo Ready",
  "updateContentCommand": "echo \"âœ… Devcontainer ready\"",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
